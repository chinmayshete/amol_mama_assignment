<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/info_btn"
        android:layout_width="151dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="108dp"
        android:text="information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pass_btn"
        android:layout_width="146dp"
        android:layout_height="69dp"
        android:layout_below="@+id/button1"
        android:layout_alignBottom="@id/button1"
        android:layout_marginTop="32dp"
        android:text="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_btn" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginTop="76dp"
        android:text="Password Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_btn" />

    <Button
        android:id="@+id/warning_btn"
        android:layout_width="131dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="176dp"
        android:text="warning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ok_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>